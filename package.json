{
  "name": "react-native-nitro-speech-recognition-monorepo",
  "private": true,
  "version": "0.2.0",
  "repository": "https://github.com/yzlin/react-native-nitro-speech-recognition.git",
  "author": "Ethan Lin <yzlin1985@gmail.com> (https://github.com/yzlin)",
  "workspaces": [
    "example",
    "packages/*"
  ],
  "scripts": {
    "build": "bun run --cwd packages/react-native-nitro-speech-recognition build",
    "specs": "bun run --cwd packages/react-native-nitro-speech-recognition specs",
    "typecheck": "bun --filter=\"**\" typecheck",
    "lint": "bun --cwd packages/react-native-nitro-speech-recognition lint",
    "release": "./scripts/release.sh",
    "example": "bun --cwd example"
  },
  "devDependencies": {
    "@biomejs/biome": "2.3.4",
    "@release-it-plugins/workspaces": "^5.0.3",
    "@release-it/bumper": "^7.0.5",
    "@release-it/conventional-changelog": "^10.0.1",
    "react-native-builder-bob": "^0.40.13",
    "release-it": "^19.0.5",
    "ultracite": "6.3.2"
  },
  "release-it": {
    "npm": {
      "publish": false
    },
    "git": {
      "commitMessage": "chore: release ${version}",
      "tagName": "v${version}",
      "requireCleanWorkingDir": false
    },
    "github": {
      "release": true
    },
    "hooks": {
      "before:release": "bun i && bun run build && git add bun.lock"
    },
    "plugins": {
      "@release-it/bumper": {
        "out": [
          {
            "file": "packages/react-native-nitro-speech-recognition/package.json",
            "path": "version"
          },
          {
            "file": "example/package.json",
            "path": "version"
          }
        ]
      },
      "@release-it/conventional-changelog": {
        "preset": {
          "name": "conventionalcommits",
          "types": [
            {
              "type": "feat",
              "section": "‚ú® Features"
            },
            {
              "type": "perf",
              "section": "üí® Performance Improvements"
            },
            {
              "type": "fix",
              "section": "üêõ Bug Fixes"
            },
            {
              "type": "chore(deps)",
              "section": "üõ†Ô∏è Dependency Upgrades"
            },
            {
              "type": "docs",
              "section": "üìö Documentation"
            }
          ]
        }
      }
    }
  },
  "packageManager": "bun"
}
