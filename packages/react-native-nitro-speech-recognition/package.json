{
  "name": "react-native-nitro-speech-recognition",
  "version": "0.2.0",
  "description": "react-native-nitro-speech-recognition",
  "main": "lib/commonjs/index",
  "module": "lib/module/index",
  "types": "lib/typescript/index.d.ts",
  "react-native": "src/index.ts",
  "source": "src/index",
  "exports": {
    ".": {
      "default": "./lib/commonjs/index.js",
      "import": "./lib/module/index.js",
      "types": "./lib/typescript/index.d.ts",
      "react-native": "./src/index.ts"
    },
    "./package.json": "./package.json",
    "./app.plugin.js": "./app.plugin.js"
  },
  "files": [
    "src",
    "react-native.config.js",
    "lib",
    "nitrogen",
    "android/build.gradle",
    "android/gradle.properties",
    "android/fix-prefab.gradle",
    "android/CMakeLists.txt",
    "android/src",
    "ios/**/*.h",
    "ios/**/*.m",
    "ios/**/*.mm",
    "ios/**/*.cpp",
    "ios/**/*.swift",
    "plugin/build",
    "app.plugin.js",
    "nitro.json",
    "*.podspec",
    "README.md"
  ],
  "scripts": {
    "build": "rm -rf lib && bun typecheck && bob build && bun run build:plugin",
    "build:plugin": "expo-module prepare plugin",
    "postinstall": "tsc || exit 0;",
    "typecheck": "tsc --noEmit",
    "clean": "rm -rf android/build node_modules/**/android/build lib plugin/build",
    "lint": "biome check . --fix",
    "lint-ci": "biome check .",
    "release": "release-it",
    "typescript": "tsc",
    "specs": "tsc && nitrogen --logLevel=\"debug\""
  },
  "keywords": [
    "react-native",
    "nitro"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/yzlin/react-native-nitro-speech-recognition.git"
  },
  "author": "Ethan Lin <yzlin1985@gmail.com> (https://github.com/yzlin)",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/yzlin/react-native-nitro-speech-recognition/issues"
  },
  "homepage": "https://github.com/yzlin/react-native-nitro-speech-recognition#readme",
  "publishConfig": {
    "registry": "https://registry.npmjs.org/"
  },
  "devDependencies": {
    "@react-native/eslint-config": "0.82.0",
    "@tsconfig/react-native": "^3.0.7",
    "@types/react": "^19.1.03",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.2.1",
    "expo-module-scripts": "^5.0.7",
    "jest": "^30.2.0",
    "nitrogen": "*",
    "react": "19.1.1",
    "react-native": "0.82.0",
    "react-native-builder-bob": "^0.40.13",
    "react-native-nitro-modules": "^0.31.5",
    "typescript": "^5.8.3"
  },
  "peerDependencies": {
    "react": "*",
    "react-native": "*",
    "react-native-nitro-modules": "*"
  },
  "dependencies": {
    "eventemitter3": "^5.0.1"
  },
  "react-native-builder-bob": {
    "source": "src",
    "output": "lib",
    "targets": [
      "commonjs",
      "module",
      [
        "typescript",
        {
          "project": "tsconfig.build.json"
        }
      ]
    ]
  },
  "release-it": {
    "npm": {
      "publish": true
    },
    "git": false,
    "github": {
      "release": false
    },
    "hooks": {
      "before:init": "bun typecheck && bun lint",
      "after:bump": "bun run build"
    }
  },
  "packageManager": "bun"
}
